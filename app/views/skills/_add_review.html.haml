.review
  .row
    .col-md-2
      .circle-overlay
        =image_tag user.picture
    .col-md-9
      .body.message-text
        =form_for(review) do |f|
          .form-group
            = f.text_area :message, rows: 2, class: "form-control", placeholder: "Write your review here"
            = f.hidden_field :lesson_id, value: lesson.id
          = f.submit "Send", class: "btn btn-custom"