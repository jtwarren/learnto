.skill
  .row
    .col-md-7.floatright
      .box
        - if @skill.approved == false
          .pending-approval
            Pending approval
        %h2.title
          = @skill.title
        .row
          .col-md-3
            .container
              %a{href: user_path(@skill.user), class: "circle-overlay"}
                = image_tag @skill.user.picture
              %h4.instructor
                = link_to @skill.user.name, user_path(@skill.user)
          .col-md-9
            .row.share-buttons
              .col-md-5
                %div{:id => 'facebook',:"data-url" => skill_url(@skill), :'data-text'=> "Learn to #{@skill.title} on LearnTo!", :'data-title'=> 'Share'}
              .col-md-5
                %div{:id => 'twitter',:"data-url" => skill_url(@skill), :'data-text'=> "Learn to #{@skill.title} on LearnTo!", :'data-title'=> 'Tweet'}
        %hr.div-line
        %h4 Description
        .description
          = @skill.description
        .qualifications
          .qualifications-heading
            %h4 Qualifications
          .qualification-text
            = @skill.qualifications
        - if @skill.approved
          - if current_user
            %button.btn.btn-custom.contact{"data-target" => "#myModal", "data-toggle" => "modal"} Contact to find a time and place!
          - else
            = link_to "Sign up or log in", login_path(return_to: @return_to), class: "btn btn-custom contact"

      -if @reviews.length > 0 || @lesson
        .box
          %h3 Reviews
          %br
          - if !@review.user
            .add-review
              = render partial: "add_review", locals: {lesson: @lesson, review: @review, user: current_user, target_user: @lesson.teacher}
            %br
          .reviews
            = render partial: "review_short", collection: @reviews.reverse

    .col-md-5
      .box
        .skill-image-full
          = image_tag @skill.picture

      - if @completed_lessons_truncated && @completed_lessons_truncated.length>0
        .box
          %h4 People who have learned with #{@skill.user.first_name}
          = render partial: "lesson_short", collection: @completed_lessons_truncated

#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} ×
        %h4#myModalLabel.modal-title Sign up for the lesson! 
      = form_for([@skill, @skill.lessons.build], :html => { :class => "form-horizontal" }) do |f|
        .modal-body
          .form-group
            .control-group
              = f.label :learning_request, "What do you want to learn and why? Tell #{@skill.user.first_name} why you would be fun to teach!", class: "control-label"
              = f.text_area :learning_request, class: "form-control"
        .modal-footer
          = f.submit "Submit", class: "btn btn-custom"

#confirmModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} ×
        %h3#myModalLabel Your request has been sent!
      .modal-body
        Learning is more fun when your friends are there with you! 
      .modal-footer
        %a.btn.btn-custom{:href=>"#",:class=>"share"}
          Invite your friends to learn with you!
