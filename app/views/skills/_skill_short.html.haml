%a.block{:href=> skill_path(skill_short), :style=> "display:block"}
  .pin
    .skill-image
      = image_tag skill_short.picture
    .profile-pic.circle-overlay
      = image_tag skill_short.user.picture
    .skill-short
      .teacher-name
        Taught by
        %span
          = skill_short.user.first_name
      .skill-title
        %span
          = skill_short.title