%a{:href=> lesson_path(lesson_short), :style=> "display:block"}
  .pin
    .skill-image
      - if lesson_short.skill
        = image_tag lesson_short.skill.picture
    .profile-pic.circle-overlay
      = image_tag lesson_short.users.first.picture
    .skill-short
      .teacher-name
        Request by
        %span
          = lesson_short.users.first.first_name
      .skill-title
        %span
          -if lesson_short.skill
            = lesson_short.skill.title
      -if !lesson_short.approved
        = link_to "Accept", approve_lessons_path(id: lesson_short.id), class: "button btn btn-custom"
        = link_to "Ignore", ignore_lessons_path(id: lesson_short.id), class: "button btn btn-custom"
      -elsif !lesson_short.completed
        = link_to "Completed", complete_lessons_path(id: lesson_short.id), class: "button btn btn-custom"