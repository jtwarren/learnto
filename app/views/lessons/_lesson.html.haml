.skill
  .row
    .col-md-7
      .box
        .row
          .col-md-12
            %h2.title
              = link_to @lesson.skill.title, @lesson.skill
        .row
          .col-md-6
            %a{href: user_path(@lesson.skill.user), class: "circle-overlay"}
              = image_tag @lesson.skill.user.picture
            %h4.instructor
              = link_to @lesson.skill.user.name, user_path(@lesson.skill.user)
      .box
        %h3 Messages
        .messages
          = render "/conversations/reply", conversation: @lesson.conversation
          - @lesson.conversation.messages.order('created_at DESC').each do |message|
            = render "/conversations/message", message: message

    .col-md-5
      .skill-image-full
        = image_tag @lesson.skill.picture
      .box
        %h3 Status
        - if current_user == @lesson.teacher
          = form_for @lesson do |f|
            - ['PENDING', 'APPROVED', 'COMPLETED', 'IGNORED'].each do |status|
              .form_row
                %label
                  = f.radio_button(:status, status)
                  = status.humanize
            = f.submit "Submit", class: "btn btn-custom"
        - else
          %p Current status: #{@lesson.status.humanize}
          / TODO: Figure out reviews from multiple students and for multiple students
          / - if @lesson.status == "COMPLETED"
          /   %h3 Review for #{@lesson.skill.user.first_name}
          /   - if @review.user == current_user
          /     = render partial: "skills/review_short", collection: [@review]
          /   - else
          /     = render partial: "skills/add_review", locals: { lesson: @lesson, review: @review, user: current_user, target_user: @lesson.skill.user}

      .box
        %h3 Students
        - @lesson.users.each do |user|
          %p
            = link_to user.name, user

        / TODO: Invite friends via fb/twitter/email
        / .invite
        /   = link_to "Invite a friend", "#"