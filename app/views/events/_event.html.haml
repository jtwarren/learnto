.skill
  .row
    .col-md-7
      .box
        - if @event.approved == false
          .pending-approval
            Pending approval
        .row
          .col-md-12
            %h2.title
              = @event.title
        .row
          .col-md-6
            %a{href: user_path(@event.user), class: "circle-overlay"}
              = image_tag @event.user.picture
            %h4.instructor
              = link_to @event.user.name, user_path(@event.user)
        .row
          .col-md-6
            .social-share
              .facebook
                .fb-share-button{"data-href" => "#{request.original_url}", "data-type" => "button_count"}
              .twitter
                %a.twitter-share-button{"data-via" => "comelearnto", href: "https://twitter.com/share"} Tweet
          %hr.div-line
        .action-links
          - if current_user == @event.user
            = link_to 'Edit', edit_event_path(id: @event.id)
            / = link_to 'Remove', remove_skill_path(@event)
        %h4 Description
        .description
          = @event.description
        - if @event.starts_at
          .starts_at
            %h4 When
          = @event.starts_at
        - if @event.approved
          - if current_user
            %button.btn.btn-custom.contact{"data-target" => "#myModal", "data-toggle" => "modal"} Contact to find a time and place!
          - else
            = link_to "Sign up or log in", login_path(return_to: @return_to), class: "btn btn-custom contact"


    .col-md-5
      .skill-image-full
        = image_tag @event.picture

      .box.skill-image-full
        = image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.latitude}%2C#{@event.longitude}"

        %span.glyphicon.glyphicon-map-marker
        = @event.address


