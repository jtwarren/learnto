!!!
%html
  %head
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "LearnTo"
    %meta{content: content_for?(:description) ? yield(:description) : "LearnTo", name: "description"}
    = favicon_link_tag
    = stylesheet_link_tag "application", :media => "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => false

    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap-theme.min.css"
    = javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js"

    = csrf_meta_tags
    = render 'layouts/shim'
  %body
    .wrapper.static
      #header
        = render 'layouts/header' unless @disable_nav
        = render 'layouts/static_banner'
      #body
        .row
          .col-md-3
            = render 'layouts/sidebar'
          .col-md-9
            = yield
        .push
    #footer
      = render 'layouts/footer' unless @disable_footer
    = render 'layouts/ga'