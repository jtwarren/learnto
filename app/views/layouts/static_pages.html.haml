!!!
%html
  %head
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "LearnTo"
    %meta{content: content_for?(:description) ? yield(:description) : "LearnTo", name: "description"}
    = stylesheet_link_tag "static_pages", :media => "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "auth-buttons", :media => "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    = render 'layouts/shim'
  %body
    %main{role: "main"}
      .container
        .content
          .row
            .span12
              = yield
          %footer
            = render 'layouts/ga'